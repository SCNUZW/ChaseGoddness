<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <zy.chasegoddness.ui.view.CircleImageView
        android:id="@+id/civ_friends_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        android:src="@drawable/default_avatar" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_friends_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="用户名"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_friends_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:ellipsize="end"
            android:maxLines="5"
            android:text="啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/ll_friends_pic_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:visibility="visible">

            <zy.chasegoddness.ui.view.IconButton
                android:id="@+id/ib_friends_pic1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/default_avatar"
                android:visibility="visible" />

            <zy.chasegoddness.ui.view.IconButton
                android:id="@+id/ib_friends_pic2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/default_avatar"
                android:visibility="invisible" />

            <zy.chasegoddness.ui.view.IconButton
                android:id="@+id/iv_friends_pic3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:src="@drawable/default_avatar"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>